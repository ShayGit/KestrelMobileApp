<?xml version="1.0" encoding="utf-8"?>



    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/powerButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/AppTheme.KestrelButton"
            app:layout_constraintBottom_toBottomOf="@id/kestrel"
            app:layout_constraintEnd_toStartOf="@id/rightButton"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toEndOf="@id/leftButton"
            app:layout_constraintTop_toTopOf="@id/kestrel"
            app:layout_constraintVertical_bias="0.688"
            app:layout_constraintWidth_percent="0.15" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/rightButton"
            style="@style/AppTheme.KestrelButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/kestrel"
            app:layout_constraintEnd_toEndOf="@id/kestrel"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/powerButton"
            app:layout_constraintTop_toTopOf="@id/kestrel"
            app:layout_constraintVertical_bias="0.688"
            app:layout_constraintWidth_percent="0.23" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/leftButton"
            style="@style/AppTheme.KestrelButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/kestrel"
            app:layout_constraintEnd_toStartOf="@id/powerButton"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="@id/kestrel"
            app:layout_constraintTop_toTopOf="@id/kestrel"
            app:layout_constraintVertical_bias="0.688"
            app:layout_constraintWidth_percent="0.23" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/kestrel"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/kestrelfront" />
        <ProgressBar
            android:id="@+id/pb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/kestrel"
            app:layout_constraintEnd_toEndOf="@id/kestrel"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/kestrel"
            app:layout_constraintTop_toTopOf="@id/kestrel" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/measurementTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeTextType="uniform"
            android:gravity="top|end"
            app:layout_constraintBottom_toBottomOf="@id/kestrel"
            app:layout_constraintEnd_toEndOf="@id/kestrel"
            app:layout_constraintHeight_percent="0.11"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="@id/kestrel"
            app:layout_constraintTop_toTopOf="@id/kestrel"
            app:layout_constraintVertical_bias="0.47"
            app:layout_constraintWidth_percent="0.4" />


    </androidx.constraintlayout.widget.ConstraintLayout>
